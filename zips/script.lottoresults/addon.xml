<!-- addon.xml -->

<addon id="script.lottoresults" version="1.0.0" name="Lotto Results" provider-name="Bang">
    <requires>
        <import addon="xbmc.python" version="2.25.0"/>
    </requires>
    <extension point="xbmc.python.script" library="resources/lib/lotto_results.py">
        <provides>script</provides>
    </extension>
    <extension point="xbmc.addon.metadata">
        <platform>all</platform>
        <summary>Display the latest Lotto NZ results</summary>
        <description>Lotto Results addon retrieves and displays the latest Lotto NZ Results</description>
        <icon>icon.png</icon>
        <language>en</language>
    </extension>
</addon>
